{
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "rootDirs": ["./src"],
    "paths": {
      "@app/*": ["./node_modules/infinitymint/dist/app/*"],
      "@client/*": ["./node_modules/infinitymint-client/dist/src/*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx"
  },
  "exclude": ["dist", "node_modules", "gems/__", "gems/__cache", "gems/@"],
  "include": [
    "./projects",
    "./src",
    "./gems",
    "./scripts",
    "./deploy",
    "./imports"
  ],
  "files": ["./hardhat.config.ts", "./index.ts"]
}
